<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="customTheme" parent="AppTheme">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <style name="edittext_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">start|center_horizontal</item>
    </style>

    <style name="toolbar_title_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
